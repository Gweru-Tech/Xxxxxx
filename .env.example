# Environment Variables for Bot Hosting Platform

# Server Configuration
NODE_ENV=production
PORT=3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# Database
DATABASE_PATH=./database.sqlite
# Alternative: Use PostgreSQL with DATABASE_URL
# DATABASE_URL=postgresql://username:password@localhost:5432/bot_hosting

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads

# Bot Management
BOT_TIMEOUT=30000
MAX_BOTS_PER_USER=10

# Website Hosting
WEBSITE_PORT_RANGE_START=8000
WEBSITE_PORT_RANGE_END=8999
MAX_WEBSITES_PER_USER=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External Services
WEBHOOK_SECRET=your-webhook-secret
CDN_URL=https://your-cdn.com

# Render.com specific
# DATABASE_URL=postgresql://user:pass@host:port/database
# REDIS_URL=redis://user:pass@host:port